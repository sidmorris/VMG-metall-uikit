extends _default.pug


append varPage
  - var pageTitle = 'Каталог'
  - var pageDesc = 'Каталог продукции'
  - var pageClass = '-catalog'


block content
  .uk-container
    .uk-grid-divider(uk-grid='')
      .uk-width-5-6
        .uk-margin-medium-top(uk-grid='')
          block contentCatalog

      .uk-width-1-6
        ul.uk-nav.uk-nav-default.uk-margin-medium-top
          li.uk-nav-header
            | Категории
          li.uk-nav-divider
          each i in global.menuCatalog
            li(class={'uk-active': pageTitle === i.title})
              a(href= i.url)= i.title
