mixin nav-button(prev, next)
  .uk-float-left.uk-text-warning.uk-transition-toggle
    a(href='#project-' + prev class=" uk-text-warning nav-left" uk-icon="icon:arrow-left; ratio:1.4")

  .uk-float-right.uk-text-warning
    a(href="#project-" + next class="uk-text-warning nav-right" uk-icon="icon:arrow-right; ratio:1.4")
