

mixin filter-gallery()
  .uk-container
    .uk-button-group.ms-filter-gallery
      each item in global.menuGallery
        a.uk-button.uk-button-primary(class={'uk-active': alias === item.alias} href='/' + item.url)= item.title

mixin header-promo(text)
  a.s-header-promo-item(href="")
    span(uk-icon="icon: bookmark; ratio: 1.2") 
    div.s-promo-desc= text






