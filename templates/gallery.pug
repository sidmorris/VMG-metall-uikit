extends _layouts/_gallery.pug


append varPage
  - var pageTitle = 'Мангалы'
  - var pageDesc = 'Страница Каталога'
  - var pageClass = ''

mixin gallery-item(item)
  .s-item.uk-inline-clip.uk-transition-toggle
    .s-image.uk-inline.uk-background-norepeat.uk-background-cover(style="background-image: url('/img/"+ item + "');")
      img.s-img-dummy.uk-invisible(src="img/"+ item alt="")
    .uk-position-cover.uk-overlay-primary.uk-transition-fade
      div.uk-position-center
        span(uk-overlay-icon="")
    a.uk-position-cover(data-type="image" href="img/"+ item)


block content
  section.s-gallery.uk-section
    div.uk-container
      div.s-filter
        div.s-button-group.uk-button-group
          a.s-active.uk-button.uk-button-primary(href="") Nav Text
          a.uk-button.uk-button-primary(href="") Nav Text
          a.uk-button.uk-button-primary(href="") Nav Text
          a.uk-button.uk-button-primary(href="") Nav Text

    div.uk-container
      div.s-gallery-content.uk-grid-margin.uk-grid.uk-grid-stack(uk-grid="")
        div(class="uk-width-1-1@m")
          div.uk-margin.uk-text-center(class="uk-child-width-1-1 uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l uk-child-width-1-5@xl" uk-grid="" uk-lightbox="")

            +gallery-item("size-h.jpg")
            +gallery-item("dark.jpg")
            +gallery-item("light.jpg")
            +gallery-item("size-h.jpg")
            +gallery-item("size2.jpg")
            +gallery-item("size1.jpg")
